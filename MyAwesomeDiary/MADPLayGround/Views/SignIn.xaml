<UserControl x:Class="MADPLayGround.Views.SignIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MADPLayGround.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <StackPanel Width="450" Height="600" HorizontalAlignment="Center">
        <Border BorderThickness="2" BorderBrush="Azure">
            <TextBlock FontSize="21" TextAlignment="Center"
                       FontWeight="Bold" >
                Đăng Nhập
            </TextBlock>
        </Border>
        <Label>User Name</Label>
        <TextBox x:Name="txtUserName"></TextBox>
        <Label>Password</Label>
        <PasswordBox x:Name="pwSignIn"></PasswordBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnSignIn" Content="Đăng Nhập"></Button>
            <Button x:Name="btnSignUp" Content="Đăng Ký"></Button>
        </StackPanel>
    </StackPanel>
</UserControl>
